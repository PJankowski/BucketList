.bucket-list-item
    background primary
    width 100%
    height 200px
    margin 10px 0
    border-radius 3px
    border 1px solid info
    float left
    padding 1.2rem
    color #FFFFFF
    
    @media screen and (min-width: 768px)
        width 23%
        margin 10px 1%
        
    h3
        margin-bottom 6px
        
.add-bucket-item
    background #FFFFFF
    width 100%
    height 200px
    margin 10px 0
    border-radius 3px
    border 5px dashed darken(info, 10%)
    float left
    padding 1.2rem
    color darken(info, 10%)
    text-align center
    cursor pointer
    
    @media screen and (min-width: 768px)
        width 23%
        margin 10px 1%
        
    i
        line-height 125px
        
.add-bucket-backdrop
    background rgba(0,0,0,0.3)
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    z-index 1000
    
.add-bucket
    position absolute
    top 25%
    left 50%
    transform translate(-50%, -25%)
    width 40%
    z-index 2000
    background #FFFFFF
    box-shadow 1px 1px 2px rgba(0,0,0,0.14), 2px 2px 4px rgba(0,0,0,0.28), -1px 1px 2px rgba(0,0,0,0.14), -2px 2px 4px rgba(0,0,0,0.28)
    
    .header
        padding 1.2rem
        border-bottom 1px solid info
        
        .close
            position absolute
            top 10px
            right 10px
            text-shadow 1px 1px 2px rgba(0,0,0,0.14)
            font-size 1.5em
            color danger
            cursor pointer
            
    .body
        padding 1.2rem
        
        .group
            position relative
            width 100%
            margin-bottom 20px
            
            input
                border none
                border-bottom 1px solid darken(info, 20%)
                outline none
                width 100%
                font-size 1.4em
                padding-top 6px
                padding-bottom 3px
                color primary
                
            .highlight
                width 0
                background primary
                height 2px
                transition all 0.2s ease-in
                position absolute
                bottom 0
                left 0
                
            label
                position absolute
                top 3px
                left 0
                color darken(info, 20%)
                transition all 0.2s ease-in
                font-size 1.2em
                
            input:valid ~ label, input:focus ~ label
                color primary
                top -11px
                font-size 1em
                
            input:valid ~ .highlight, input:focus ~ .highlight
                width 100%
                
        
    .footer
        padding 1.2rem
        border-top 1px solid info
        
        .btns
            float right
            padding-bottom 1.2rem
            
            .btn
                float left
                margin-left 10px



