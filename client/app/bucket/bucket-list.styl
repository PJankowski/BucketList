.bucket-list-item
    background primary
    width 100%
    height 200px
    margin 10px 0
    border-radius 3px
    border 1px solid info
    float left
    padding 1.2rem
    color #FFFFFF
    
    @media screen and (min-width: 768px)
        width calc((100% / 3) - 2%)
        margin 10px 1%
        
    h3
        margin-bottom 6px
        
        a
            color info
        
.add-bucket-item
    background #FFFFFF
    width 100%
    height 200px
    margin 10px 0
    border-radius 3px
    border 5px dashed darken(info, 20%)
    float left
    padding 1.2rem
    color darken(info, 20%)
    text-align center
    cursor pointer
    transition all 0.2s ease-in
    
    @media screen and (min-width: 768px)
        width calc((100% / 3) - 2%)
        margin 10px 1%
        
    i
        line-height 100px
        
    &:hover
        border-color primary
        color primary
    

