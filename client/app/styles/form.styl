.group
    position relative
    width 100%
    margin-bottom 20px
    
    input, textarea
        border none
        border-bottom 1px solid darken(info, 20%)
        outline none
        width 100%
        font-size 1.4em
        padding-top 6px
        padding-bottom 3px
        color text-color
        
    .highlight
        width 0
        background primary
        height 2px
        transition all 0.2s ease-in
        position absolute
        bottom 0
        left 0
        
    label
        position absolute
        top 3px
        left 0
        color darken(info, 20%)
        transition all 0.2s ease-in
        font-size 1.2em
        
    input:valid ~ label, input:focus ~ label, textarea:valid ~ label, textarea:focus ~ label
        color primary
        top -11px
        font-size 1em
        
    input:valid ~ .highlight, input:focus ~ .highlight, textarea:valid ~ .highlight, textarea:focus ~ .highlight
        width 100%