.modal-backdrop
    background rgba(0,0,0,0.3)
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    z-index 1000
    
.modal
    position absolute
    top 25%
    left 50%
    transform translate(-50%, -25%)
    width 40%
    z-index 2000
    background #FFFFFF
    box-shadow 1px 1px 2px rgba(0,0,0,0.14), 2px 2px 4px rgba(0,0,0,0.28), -1px 1px 2px rgba(0,0,0,0.14), -2px 2px 4px rgba(0,0,0,0.28)
    
    .header
        padding 1.2rem
        border-bottom 1px solid darken(info, 5%)
        
        .close
            position absolute
            top 10px
            right 10px
            text-shadow 1px 1px 2px rgba(0,0,0,0.14)
            font-size 1.5em
            color danger
            cursor pointer
            
    .body
        padding 1.2rem
        
    .footer
        padding 1.2rem
        border-top 1px solid darken(info, 5%)
        
        .btns
            float right
            padding-bottom 1.2rem
            
            .btn
                float left
                margin-left 10px